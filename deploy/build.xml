<?xml version="1.0" encoding="UTF-8"?>
<project name="goxgui" default="build" basedir=".">

	<property name="src.dir" value="../" />
	<property name="build.dir" value="../build" />

	<!-- ================================= 
          target: clean              
         ================================= -->
	<target name="clean" description="Cleans the build directory">

		<delete verbose="true" includeemptydirs="true">
			<fileset dir="${build.dir}" includes="**/*" />
		</delete>

	</target>

	<!-- ================================= 
          target: build              
         ================================= -->
	<target name="build" depends="clean" description="Builds the project">

		<copy todir="${build.dir}/goxgui" verbose="true">
			<fileset dir="${src.dir}/goxgui" includes="**/*.py" />
		</copy>

		<copy todir="${build.dir}/goxtool" verbose="true">
			<fileset dir="${src.dir}/goxtool" includes="**/*.py" />
		</copy>

		<copy todir="${build.dir}" verbose="true">
			<fileset file="start.sh" />
		</copy>

	</target>

</project>